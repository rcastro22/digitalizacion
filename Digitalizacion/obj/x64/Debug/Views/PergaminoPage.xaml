<Page x:ConnectionId='1'
    x:Class="Digitalizacion.Views.PergaminoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Digitalizacion.Views"
    xmlns:vm="using:Digitalizacion.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Pergamino"
    mc:Ignorable="d">

    <Page.Resources>
        <vm:PergaminoContext x:ConnectionId='2' x:Key="PergaminoContext" x:Name="PergaminoContext" />
    </Page.Resources>

    <Grid Background="{StaticResource FondoPartial}">
        <Grid.DataContext>
            <Binding Source="{StaticResource PergaminoContext}"/>
        </Grid.DataContext>

        <StackPanel>
            
            <TextBox x:ConnectionId='3' x:Name="txtCaja" Text="{Binding Path=Caja, Mode=TwoWay}"
                     Header="No. de Caja" MaxLength="8"
                     />
            <TextBox x:ConnectionId='4' x:Name="txtPergamino" Text="{Binding Path=Pergamino, Mode=TwoWay}"
                     Header="No. de Pergamino" MaxLength="8"
                     />
            <Button x:ConnectionId='5' x:Name="btnUpdate" HorizontalAlignment="Stretch" 
                    Content="Actualizar no. de pergamino" 
                                            Background="DarkBlue"
                    IsEnabled="{Binding Path=IsCajaFill, Mode=OneWay}"/>
        </StackPanel>

    </Grid>
</Page>

